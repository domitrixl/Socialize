<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialMediaApp.page_messages"
             Title="Messages"
             BackgroundColor="Gray">

    <Grid x:Name="msggrid" RowSpacing="3" Margin="0,3,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ImageButton
            Source="messages.png"
            BackgroundColor="Black"
            x:Name="btn_newmsg"
            Grid.ColumnSpan="1"
            Clicked="btn_newmsg_ClickedAsync"/>

        <ImageButton
            Source="profile.png"
            BackgroundColor="Black"
            x:Name="btn_showfriendlist"
            Grid.Column="2"
            Margin="10,0,0,0"
            Clicked="btn_showfriendlist_Clicked"/>

    </Grid>

</ContentPage>